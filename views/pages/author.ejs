<div>
  <div class="d-flex justify-content-between align-content-center my-3">
    <h1 class="text-muted">List of Authors</h1>
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#authorAdd"
    >
      Create Author
    </button>
  </div>
  <div class="container">
    <table class="table table-hover" style="cursor: pointer">
      <thead class="table-info rounded-top">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Created At</th>
          <th scope="col">Updated At</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% authors.forEach(author => { %>
        <tr>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.id %>"
            >
              <%= author.id%>
            </p>
          </td>
          <td>
            <img
              src="<%= author.image%>"
              class="rounded-1"
              style="width: 60px; height: 60px"
            />
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.name %>"
            >
              <%= author.name %>
            </p>
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.description %>"
            >
              <%= author.description %>
            </p>
          </td>
          <td>
            <% if (author.isActive === true) { %>
            <span class="badge bg-success">Active</span>
            <% } else { %>
            <span class="badge bg-secondary">Inactive</span>
            <% } %>
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.created_at %>"
            >
              <%= author.created_at %>
            </p>
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.updated_at %>"
            >
              <%= author.updated_at %>
            </p>
          </td>

          <td>
            <button
              type="button"
              class="btn btn-info"
              data-bs-toggle="modal"
              data-bs-target="#viewAuthorModal_<%= author.id %>"
            >
              <i class="lni lni-eye text-white"></i>
            </button>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#updateAuthorModal_<%= author.id %>"
            >
              <i class="lni lni-pencil-alt"></i>
            </button>
            <button
              type="button"
              class="<%= author.isActive===true? 'btn btn-danger':'btn btn-secondary disabled ' %>"
              data-bs-toggle="modal"
              data-bs-target="#deleteAuthorModal_<%= author.id %>"
            >
              <i class="lni lni-trash-can"></i>
            </button>
          </td>
        </tr>
        <%- include('../modals/author/view_author.ejs', { author }) %> <%-
        include('../modals/author//update_author.ejs', { author }) %>
        <%-include('../modals/author//delete_author.ejs', { author }) %> <% })
        %>
      </tbody>
    </table>
    <%-include('../partials/pagination.ejs')%>
  </div>
</div>
<%- include('../modals/author//create_author.ejs') %>
