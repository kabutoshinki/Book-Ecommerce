<div>
  <div class="d-flex justify-content-between align-content-center my-3">
    <h1 class="text-muted">List of Authors</h1>
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#nationAdd"
    >
      Create Author
    </button>
  </div>
  <div class="container">
    <table class="table table-hover" style="cursor: pointer">
      <thead class="table-info rounded-top">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Image</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Created At</th>
          <th scope="col">Updated At</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% authors.forEach(author => { %>
        <tr>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.id %>"
            >
              <%= author.id%>
            </p>
          </td>
          <td></td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.name %>"
            >
              <%= author.name %>
            </p>
          </td>
          <td></td>
          <td></td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.created_at %>"
            >
              <%= author.created_at %>
            </p>
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= author.updated_at %>"
            >
              <%= author.updated_at %>
            </p>
          </td>

          <td>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#nationUp_<%= author.id %>"
            >
              Update
            </button>
            <button
              type="button"
              class="btn btn-danger"
              data-bs-toggle="modal"
              data-bs-target="#nationDel_<%= author.id %>"
            >
              Delete
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
