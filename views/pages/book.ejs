<div>
  <div class="d-flex justify-content-between align-content-center mt-3">
    <h1 class="text-muted">List of Books</h1>
    <button
      type="button"
      class="btn btn-success"
      data-bs-toggle="modal"
      data-bs-target="#nationAdd"
    >
      Create Book
    </button>
  </div>
  <div class="container">
    <table class="table table-hover" style="cursor: pointer">
      <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
        <tr>
          <td>
            <img src="<%= book.image%>" style="width: 50px; height: 50px" />
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= book.title %>"
            >
              <%= book.title %>
            </p>
          </td>
          <td>
            <p
              class="text-truncate"
              style="max-width: 150px"
              title="<%= book.description %>"
            >
              <%= book.description %>
            </p>
          </td>
          <td></td>
          <td>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#nationUp_<%= book.id %>"
            >
              Update
            </button>
            <button
              type="button"
              class="btn btn-danger"
              data-bs-toggle="modal"
              data-bs-target="#nationDel_<%= book.id %>"
            >
              Delete
            </button>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
