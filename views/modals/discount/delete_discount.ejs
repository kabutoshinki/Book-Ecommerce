<div
  class="modal fade"
  id="deleteDiscountModal_<%= discount.id %>"
  tabindex="-1"
  aria-labelledby="discountDelLabel_<%= discount.id %>"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="discountDelLabel_<%= discount.id %>">
          Delete Discount
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete discount "<%= discount.name %>"?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button
          type="button"
          class="btn btn-danger"
          data-bs-dismiss="modal"
          onclick="deleteDiscount('<%= discount.id %>')"
        >
          Delete
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function deleteDiscount(discountId) {
    fetch(`/discounts/${discountId}`, {
      method: 'DELETE',
    })
      .then((response) => {
        if (response.ok) {
          location.reload(); // Reload the page to reflect the changes
        } else {
          alert('Failed to delete discount');
        }
      })
      .catch((error) => {
        console.error('Error deleting discount:', error);
        alert('Error deleting discount');
      });
  }
</script>
