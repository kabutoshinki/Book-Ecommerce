<!-- view category Modal -->
<div
  class="modal fade"
  id="viewCategoryModal_<%= category.id %>"
  tabindex="-1"
  aria-labelledby="categoryUploadLabel_<%= category.id %>"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title fw-bold"
          id="categoryUploadLabel_<%= category.id %>"
        >
          <%= category.name %>
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="categoryviewForm_<%= category.id %>">
          <div class="mb-3">
            <label for="name_<%= category.id %>" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name_<%= category.id %>"
              value="<%= category.name %>"
              name="name"
              disabled
            />
          </div>
          <div class="mb-3">
            <label for="description_<%= category.id %>" class="form-label"
              >Description</label
            >
            <textarea
              class="form-control"
              id="description_<%= category.id %>"
              name="description"
              rows="3"
              disabled
            >
<%= category.description %></textarea
            >
          </div>
          <div class="mb-3">
            <label for="name_<%= category.id %>" class="form-label"
              >Created At</label
            >
            <input
              type="text"
              class="form-control"
              id="name_<%= category.id %>"
              value="<%= category.created_at %>"
              name="name"
              disabled
            />
          </div>
          <div class="mb-3">
            <label for="name_<%= category.id %>" class="form-label"
              >Updated At</label
            >
            <input
              type="text"
              class="form-control"
              id="name_<%= category.id %>"
              value="<%= category.updated_at %>"
              name="name"
              disabled
            />
          </div>

          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
